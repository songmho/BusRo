<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.busro.busro.MainActivity">
    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"><LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="35dp"><ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/busro"
        android:gravity="center"/>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus Ro"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버스로"
            android:textSize="28dp"
            android:textColor="#FFFFFF"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/box1"
            android:background="@drawable/shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"><ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/routesearch"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노선검색"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/box2"
            android:background="@drawable/shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"><ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/qna"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="바게시판"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/box3"
            android:background="@drawable/shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:padding="20dp"><ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/terminal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="터미널안"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/box4"
            android:background="@drawable/shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"><ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용안내"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
